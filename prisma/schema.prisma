// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MARIADB_URL") // uses connection pooling
}

model Warning {
  id       Int      @id @default(autoincrement())
  user_id  String
  guild_id String
  reason   String
  time     DateTime @default(now())
}

model GuildConfig {
  id     String @id
  config Json
}

model RoleSelector {
  id         Int                  @id @default(autoincrement())
  guild_id   String
  channel_id String
  message_id String
  unique     Boolean              @default(false)
  values     RoleSelectorValues[]

  @@index([message_id])
}

model RoleSelectorValues {
  id             Int          @id @default(autoincrement())
  role_id        String
  label          String
  description    String?
  emoji          String?
  RoleSelector   RoleSelector @relation(fields: [roleSelectorId], references: [id])
  roleSelectorId Int
}

model RatherGame {
  id           Int     @id @default(autoincrement())
  public       Boolean @default(false)
  guild_id     String?
  option1      String
  option2      String
  option1votes Int     @default(0)
  option2votes Int     @default(0)
}
